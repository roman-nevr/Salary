<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="@dimen/mainItemMarginSize"
              android:paddingBottom="@dimen/mainItemMarginSize"
    tools:context=".NavigationScreen">
    <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"

            android:textSize="@dimen/tvNameTextSize"
            android:text="RomanROMAN"
            android:id="@+id/tvName"
            android:textColor="@color/tvNameColor"
            />
    <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:text="16201"
            android:textSize="@dimen/tvBalanceTextSize"
            android:id="@+id/tvBalance"
            />
</LinearLayout>